{
	"name": "discordbot",
	"version": "5.0.0",
	"description": "A bot for Discord written in Node.js without any third-party libraries.",
	"main": "./emit/main.js",
	"type": "module",
	"scripts": {
		"start": "npx tsc && node .",
		"clean": "rm -r ./emit",
		"build": "rm -r ./emit && npx tsc --sourceMap false && docker build --pull --file Dockerfile --tag ghcr.io/viral32111/discordbot:latest ./emit",
		"docker": "docker run --name bot --interactive --tty --env-file .env --rm ghcr.io/viral32111/discordbot:latest"
	},
	"author": {
		"name": "viral32111",
		"email": "contact@viral32111.com",
		"url": "https://viral32111.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/viral32111/discordbot"
	},
	"keywords": [
		"discord",
		"bot",
		"automation"
	],
	"license": "AGPL-3.0-only",
	"devDependencies": {
		"@types/node": "^18.15.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.36.0",
		"typescript": "^4.9.5"
	}
}
